
<h2>予算一覧</h2>
<%= link_to '新規予算の登録', new_trn_budget_detail_path %>
<table class="table table-bordered">
  <thead>
  <tr>
    <th class="grid-th-width1">予算ID</th>
    <th class="grid-th-width2">予算名</th>
    <th class="grid-th-width3">予算種別</th>
    <th class="grid-th-width4">予算詳細</th>
    <th class="grid-th-width5">編集</th>
  </tr>
  </thead>
  <tbody>
  <% @trn_budget_details.each do |trn_budget_detail| %>
      <tr style="height:48px;">
        <td style="vertical-align: middle"><%= link_to trn_budget_detail.bg_id,trn_budget_detail %></td>
        <td style="vertical-align: middle"><%= trn_budget_detail.bg_title %></td>
        <td style="vertical-align: middle"><%= trn_budget_detail.bg_kind %></td>
        <td style="vertical-align: middle"><%= trn_budget_detail.bg_detail %></td>
        <td class="henshu-cell">
 
        </td>
      </tr>
      <% @grid_no = @grid_no %>
  <% end %>
  <tbody>
  </table>
  
<div style="text-align: center">
  <%= will_paginate @trn_budget_details,
                    renderer: BootstrapPagination::Rails,
                    previous_label: "前へ",
                    next_label: "次へ",
                    inner_window: 1,
                    outer_window: 0,
                    class:"pagination-sm"
  %>
</div>


